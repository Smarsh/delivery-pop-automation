terraform {
    backend "s3" {
      bucket   = "smarsh-terraform-state-management-${REGION_BUCKET_SUFFIX}"
      key      = "{KEY_PATH}"
      region   = "${REGION}"
    }

    required_version = ">= 1.1.0"
    required_providers {
      aws = {
        source  = "hashicorp/aws"
        version = "~> 4.45"
      }
    }
  }

  # Configure Providers
  provider "aws" {
    region = "${REGION}"
  }